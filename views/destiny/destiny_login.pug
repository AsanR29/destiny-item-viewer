extends ./destiny_layout

block content
    include ../../src/destiny_header.pug
    body(class="bg-blue-900 h-full w-full")
        div(id="bg2" class="bg-transparent h-full w-full" style="position:absolute; z-index:-1;")
            div(class="mx-auto px-2 py-4 sm:px-4 lg:px-6 flex space-x-4" style="max-width:85rem;")
                div(class="bg-blue-910 h-40 w-80")
        div(style="z-index:0;" class="bg-transparent h-full w-full")
            +drop_header(title)
            //-div(style="height:100%; width:100%; z-index:1;")
                svg(viewBox="0 0 10 10" xmlns="http://www.w3.org/2000/svg")
                    line(x1="1.25" y1="0" x2="1.25" y2="10" stroke="#4433FF" stroke-width="0.3%")
                    line(x1="0" y1="1.25" x2="10" y2="1.25" stroke="#4433FF" stroke-width="0.3%")
            div(class="bg-transparent h-full w-full pt-20 pb-20 pl-64 pr-64" style="z-index:0;")
                center
                    svg(class="" style="height:100px;" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg")
                        circle(cx="50" cy="50" r="50" fill="#ffffff")
                div(class="mt-6 flex justify-center gap-4")
                div(class="bg-blue-500 block border-solid border-2 border-spacing-2 border-blue-700")
                    p(class="ml-8 text-white") #{form_type}
                    form(method="post", action="" class="space-y-6 max-w-lg mx-auto bg-white p-8 rounded shadow")
                        div
                            label(for="displayName", class="block text-sm font-medium text-gray-700") Bungie display name
                            input(id="displayName", type="text", name="displayName", class="mt-1 block w-full border bg-gray-200 border-gray-300 rounded-md shadow-sm px-3 py-2 focus:ring-blue-500 focus:border-blue-500")

                        div
                            label(for="displayNameCode", class="form_login_label") Display name's code
                            input(id="displayNameCode", type="number", name="displayNameCode", class="form_login_input")

                        div
                            label(id="password_label", for="password_input", class="form_login_label") Password 
                            div(class="flex")
                                input(id="password_input", type="password", name="password", class="w-3/4 form_login_input")
                                button(id="password_toggle", type="button", onclick="togglePasswordSection()", class="w-1/4 bg-gray-400 text-black mt-1 px-4 py-2 rounded-md hover:bg-gray-500") Toggle
                            label(class="text-sm font-small text-gray-700") Logging in without a password limits access to only what bungie makes public

                        div
                            button(type="submit", value="SAVE", class="w-full bg-blue-600 text-black px-4 py-2 rounded hover:bg-blue-700") Submit